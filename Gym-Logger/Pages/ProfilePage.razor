@page "/profilePage"
@using Gym_Logger.Data
@inject AppUserService UserService

<div class="topHeaderHomeContainer">
    <div class="welcomeFont"> Your Profile</div>
    <NavLink class="navButton" href="settingsPage"><span class="material-symbols-sharp settingsIcon">settings</span></NavLink>
</div>
  
<div class="profileDetailContainer">
    <img class="avatarImg" />
    <h1> @userDetails.UserName </h1>
    <h2> @userDetails.WorkoutsCompleted Workouts Done </h2>
    <h2> @userDetails.HoursWorkedOut Hrs Worked Out </h2>
    <h2> @userDetails.IbsLifted Ibs Lifted </h2>
    <h2> Height: @userDetails.Height </h2>
    <h2> Weight: @userDetails.Weight </h2>
    <h2> Goal Weight: @userDetails.GoalWeight </h2>
    <h2> BMI: @userDetails.Bmi </h2>
    <h2> Daily Calories: @userDetails.DailyCalories </h2>
</div>

<div class="chartPage">
    <div class="chartContainer">
      <h1 class="chartTitle">Workouts this week</h1>
      <div class="chartTab"> </div>
    </div>

    <div class="chartContainer">
      <h1 class="chartTitle">Calories this week</h1>
      <div class="chartTab"> </div>
    </div>

    <div class="chartContainer">
      <h1 class="chartTitle">Weight this week</h1>
      <div class="chartTab"> </div>
    </div>
</div>


@code {
    private AppUser userDetails;
    private string username = "JeremiahGrant";


    protected override async Task OnInitializedAsync()
    {
        userDetails = UserService.GetAppUser(username);
    }
}
